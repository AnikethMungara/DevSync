# AI Provider Configuration
AI_PROVIDER=openai         # openai | anthropic | google
AI_MODEL=gpt-4o-mini       # default model
ALLOWED_MODELS=gpt-4o-mini,gpt-4o,claude-3-5-sonnet-20241022,gemini-1.5-pro

# API Keys (required based on AI_PROVIDER)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Safety & Limits
AGENT_MAX_TOKENS=2000
AGENT_MAX_RUN_SECONDS=60
AGENT_MAX_OUTPUT_CHARS=200000
AGENT_RATE_RPS=2
AGENT_ALLOW_TOOLS=fs,exec,http,search   # comma-separated whitelist

# Execution Sandbox
WORKSPACE_ROOT=./backend/workspace
DISABLE_NETWORK=false

# Backend Configuration (existing)
PORT=8787
FRONTEND_URL=http://localhost:3000
DATABASE_PATH=./database.db
WORKSPACE_DIR=./workspace
