# ============================================
# DevSync Frontend Environment Configuration
# ============================================
# Copy this file to .env.local for local development

# ============================================
# Backend API URL
# ============================================
# For local development (default)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8787

# For network access from other devices:
# 1. Find your computer's IP address
#    - Windows: ipconfig
#    - Mac/Linux: ifconfig or ip addr
# 2. Update to use your IP (example below)
# NEXT_PUBLIC_BACKEND_URL=http://192.168.1.100:8787

# ============================================
# Authentication (optional - runs in guest mode if disabled)
# ============================================
NEXT_PUBLIC_AUTH_ENABLED=true

# ============================================
# Features
# ============================================
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true

# ============================================
# Development
# ============================================
NEXT_PUBLIC_ENV=development

# ============================================
# Notes
# ============================================
# - .env.local is automatically ignored by git
# - Changes require frontend restart (npm run dev)
# - Make sure backend is also configured with matching URLs
